@model Product
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h4 class="mb-0">Chi tiết sản phẩm</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 text-center mb-4">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid" style="max-height: 300px;" />
                        }
                        else
                        {
                            <img src="/images/no-image.png" alt="No image" class="img-fluid" style="max-height: 300px;" />
                        }
                    </div>
                    <div class="col-md-8">
                        <h3>@Model.Name</h3>
                        <p class="badge bg-info">@Model.Category?.Name</p>
                        
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <p><strong>Giá:</strong> @Model.Price.ToString("#,##0") VNĐ</p>
                                <p><strong>Tồn kho:</strong> @Model.Stock</p>
                                <p><strong>Kích cỡ:</strong> @Model.Size</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Màu sắc:</strong> @Model.Color</p>
                                <p><strong>Thương hiệu:</strong> @Model.Brand</p>
                                <p><strong>ID:</strong> @Model.Id</p>
                            </div>
                        </div>
                        
                        <div class="mt-3">
                            <h5>Mô tả:</h5>
                            <p>@Model.Description</p>
                        </div>
                    </div>
                </div>
                
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="fas fa-edit"></i> Sửa
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Xóa
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
