@model Product
@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Chỉnh sửa sản phẩm</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="ImageUrl" />
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Name" class="form-control" placeholder="Tên sản phẩm" />
                                <label asp-for="Name" class="required"></label>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId">
                                    <option value="">-- Chọn danh mục --</option>
                                </select>
                                <label asp-for="CategoryId" class="required"></label>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-floating mb-3">
                        <textarea asp-for="Description" class="form-control" placeholder="Mô tả" style="height: 100px"></textarea>
                        <label asp-for="Description" class="required"></label>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Price" class="form-control" placeholder="Giá" />
                                <label asp-for="Price" class="required"></label>
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Stock" class="form-control" placeholder="Số lượng" />
                                <label asp-for="Stock" class="required"></label>
                                <span asp-validation-for="Stock" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <div class="form-floating">
                                <input asp-for="Size" class="form-control" placeholder="Kích cỡ" />
                                <label asp-for="Size"></label>
                                <span asp-validation-for="Size" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-floating">
                                <input asp-for="Color" class="form-control" placeholder="Màu sắc" />
                                <label asp-for="Color"></label>
                                <span asp-validation-for="Color" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-floating">
                                <input asp-for="Brand" class="form-control" placeholder="Thương hiệu" />
                                <label asp-for="Brand"></label>
                                <span asp-validation-for="Brand" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Hình ảnh hiện tại</label>
                        <div>
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" alt="@Model.Name" style="max-width: 200px; max-height: 200px;" />
                            }
                            else
                            {
                                <p>Không có hình ảnh</p>
                            }
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Thay đổi hình ảnh</label>
                        <input type="file" name="imageFile" id="imageFile" class="form-control" accept="image/*" />
                        <div class="mt-2">
                            <img id="imagePreview" src="#" alt="Xem trước" style="max-width: 200px; max-height: 200px; display: none;" />
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Lưu thay đổi
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
