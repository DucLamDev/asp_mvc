@model IEnumerable<QL_Shop.Models.UserViewModel>
@{
    ViewData["Title"] = "Quản lý tài khoản";
}
<div class="container mt-4">
    <h2 class="mb-4">Quản lý tài khoản</h2>
    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Email</th>
                <th>Vai trò</th>
                <th style="width: 180px;">Thao tác</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@string.Join(", ", user.Roles)</td>
                <td>
                    <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-warning me-2"><i class="fas fa-edit"></i> Sửa</a>
                    <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i> Xóa</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div> 