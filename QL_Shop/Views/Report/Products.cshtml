@model IEnumerable<QL_Shop.Models.Product>
@{
    ViewData["Title"] = "Báo cáo sản phẩm";
}
<div class="container mt-4">
    <h2 class="mb-4">Báo cáo sản phẩm</h2>
    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Tên sản phẩm</th>
                <th>Danh mục</th>
                <th>Giá</th>
                <th>Tồn kho</th>
                <th>Thương hiệu</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Category?.Name</td>
                <td>@item.Price.ToString("#,##0") VNĐ</td>
                <td>@item.Stock</td>
                <td>@item.Brand</td>
            </tr>
        }
        </tbody>
    </table>
</div> 